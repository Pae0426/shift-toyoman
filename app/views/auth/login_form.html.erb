<div class="flash-logout">
    <!--<i class="far fa-check-circle check"></i>-->
    <%= flash[:logout] %>
</div>
<div class="flash-error">
    <!--<i class="far fa-times-circle cross"></i>-->
    <%= flash[:error] %>
</div>

<div class="form users-form">
    <div class="form-body">
        <% if @error_message %>
            <div class="form-error">
            <%= @error_message %>
            </div>
        <% end %>

        <%= form_with url: "/auth/login" do |form| %>
            <%= form.label "担当者番号", class: "form-num" %>
            <%= form.number_field :employee_num %>
            <%= form.label "パスワード", class: "form-pass" %>
            <%= form.password_field :password %>
            <%= form.submit "ログイン" %>
        <% end %>
    </div>
</div>